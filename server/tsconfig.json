{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../dist/server",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "paths": {
      "@client/*": ["../client/*"],
      "@server/*": ["./*"],
      "@shared/*": ["../shared/*"],
      "@config/*": ["config/*"],
      "@controller/*": ["controllers/*"],
      "@model/*": ["models/*"],
      "@util/*": ["utils/*"],
      "@route/*": ["routes/*"],
      "@interface/*": ["interfaces/*"]
    }
  }
}
